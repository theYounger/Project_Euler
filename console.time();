console.time();
function fib(num) {
  var previous = 0;
  var current = 1;
  var next = 1;
  var sum = 0;
  for (var x = 2; x < 100; x++) {
    next = previous + current;
    previous = current;
    current = next;
    if (current % 2 === 0 && current < num) {
      sum += current;
    }
  }
  console.log(sum);
}
fib(4000000);
console.timeEnd();